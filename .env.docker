# Docker-specific environment variables for Predictive Maintenance System
# This file contains environment variables optimized for containerized deployment

# Supervisor Configuration
SUPERVISOR_PORT=5000

# Data Agent Configuration
DATA_AGENT_URL=http://data-agent:5001
DATA_AGENT_PORT=5001
DB_HOST=postgres
DB_NAME=predictive_maintenance
DB_USER=postgres
DB_PASSWORD=postgres
DATA_FETCH_INTERVAL=1800  # 30 minutes in seconds

# Prediction Agent Configuration
PREDICTION_AGENT_URL=http://prediction-agent:5002
PREDICTION_AGENT_PORT=5002
EQUIPMENT_FILE=inference/data/10apr/equipment_usage.csv
FAILURE_FILE=inference/data/10apr/failure_logs.csv
MAINTENANCE_FILE=inference/data/10apr/maintenance_history.csv
PREDICTION_THRESHOLD=0.85
PREDICTION_HORIZON_DAYS=30

# Simulation Agent Configuration
SIMULATION_AGENT_URL=http://simulation-agent:5003
SIMULATION_AGENT_PORT=5003
MAX_SIMULATION_TIME=300  # 5 minutes in seconds

# LLM Chat Configuration (if needed)
CHAT_AGENT_PORT=5005
MODEL_NAME=llama3:8b
SUPERVISOR_API_URL=http://supervisor:5000
DATA_FOLDER=./chat/data/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/digital_twin.log

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_ENV=production

# Project Name
PROJECT_NAME=Predictive-maintanence
