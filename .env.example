# Configuration for Predictive Maintenance System
# This file contains environment variables for the predictive maintenance system.
# Make sure to set the correct values for your environment.
# You can use this file to set up your local environment or for deployment.

# Supervisor Configuration
SUPERVISOR_PORT=5000

# Data Agent Configuration
DATA_AGENT_URL=http://localhost:5001
DATA_AGENT_PORT=5001
DB_HOST=localhost
DB_NAME=predictive_maintenance
DB_USER=your_username_here
DB_PASSWORD=your_password_here
# Ensure to replace 'your_username_here' and 'your_password_here' with actual credentials
DATA_FETCH_INTERVAL=1800  # 30 minutes in seconds

# Prediction Agent Configuration
PREDICTION_AGENT_URL=http://localhost:5002
PREDICTION_AGENT_PORT=5002
# Ensure to replace with the actual path to your model file
PREDICTION_THRESHOLD=0.85

# Simulation Agent Configuration
SIMULATION_AGENT_URL=http://localhost:5003
SIMULATION_AGENT_PORT=5003
MAX_SIMULATION_TIME=300  # 5 minutes in seconds

# LLM Chat Configuration
MODEL_NAME=your_model_name_here # Replace with the actual model name
# Example: llama3:8b
SUPERVISOR_API_URL=http://localhost:5000
DATA_FOLDER=./chat/data/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/digital_twin.log

# Adding flask host
FLASK_HOST=localhost
